@page "/Modelo/Delete"
@page "/Modelo/Delete/{AporteId:int}"
@inject AporteService aporteService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Eliminar Modelos</PageTitle>

<div class="container">
    <div class="card shadow-header">
        <div class=" bg-primary text-white text-center py-2 rounded">
            <h3><strong>Eliminar Modelo</strong></h3>
        </div>

        <div class="card-header text-center">
            <h3 class="text-danger">¿Est&aacute; seguro de eliminar este aporte?</h3>
        </div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg">
                        <div card-header>
                            <h3 class="text-center"><strong>Datos del Aporte</strong></h3>
                        </div>

                        <div class="card-body">
                            <div class="border-primary border-2 borde">
                                <div card-body>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <ul class="list-unstyled">
                                                <li><strong>AporteId:</strong>@Modelos.AporteId</li>
                                                <li><strong>Descripcion:</strong>@Modelos.Persona</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-center">
                <button type="button" class="btn btn-outline-danger" @onclick="EliminarModelos"><i class="bi bi-trash-fill"></i>Eliminar</button>
                <button type="button" class="btn btn-outline-primary" @onclick="Volver"><i class="bi bi-box-arrow-left"></i>Volver</button>
            </div>

        </div>

    </div>
</div>

@code {

    [Parameter]
    public int AporteId { get; set; }

    public Modelo? Modelos { get; set; } = new Modelo();

    public bool existe = false;

    protected override async Task OnInitializedAsync()
    {

        if (AporteId != 0)
        {
            Modelos = await aporteService.Buscar(AporteId);
        }
    }

    public async Task EliminarModelos()
    {

        if (AporteId == 0 || Modelos == null)
        {
            return;
        }

        if (await aporteService.Eliminar(AporteId))
        {
            Volver();
        }

    }

    public async Task Volver()
    {
        navigationManager.NavigateTo("/Modelo/Index");
    }

}
